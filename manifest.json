{
    "name": "Responsive Inspector",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Responsive Inspector allows inspecting page media queries.",

    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },

    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },

    "permissions": [
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*",
        "file:///*/*",
        "file://*/*/*"
    ],

    "browser_action": {
        "default_title": "Responsive Inspector",
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_popup": "popup.html"
    },

    "web_accessible_resources": [
        "templates/snapshot.tpl", "images/bg-pattern.png", "images/asterix.png", "scripts/libs/prettify.css"
    ]
}